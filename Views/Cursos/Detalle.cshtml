@model PortalAcademico.Models.Curso

<h2>@Model.Codigo - @Model.Nombre</h2>
<p><strong>Créditos:</strong> @Model.Creditos</p>
<p><strong>Horario:</strong> @Model.HorarioInicio - @Model.HorarioFin</p>
<p><strong>Cupo máximo:</strong> @Model.CupoMaximo</p>

@if (User.Identity?.IsAuthenticated ?? false)
{
    <form asp-controller="Matriculas" asp-action="Inscribirse" asp-route-cursoId="@Model.Id" method="post">
        <button type="submit" class="btn btn-success">Inscribirse</button>
    </form>
}
else
{
    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-secondary">Inicia sesión para inscribirte</a>
}

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Ok"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
}
